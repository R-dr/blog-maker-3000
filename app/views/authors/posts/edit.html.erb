<div class="row">
  <div class="col-md-3">
<%= link_to 'Back', posts_path, class: 'btn btn-secondary mb-3'%>
    <div class="card">
      <div class="card-body">
      <h4 class="card-title">Editing Post</h4>
          <%= render 'form', post: @post %>

      </div>
    </div>
  </div>
    <div class="col-md-9">
    <div class="mb-3">
    <%= form_with(model: [@post, @paragraph]) do |f|%>
    <%= f.hidden_field :element_type, value: 'paragraph' %>
    <%= f.submit 'Paragraph', class: 'btn btn-primary'%>
    <% end %>
    </div>
    <div class="card">
    <div class="card-body pt-5">
      <% @post.elements.each do |e| %>  
      <% if e.persisted? %>
            <div class="mb-3 p-3 paragraph">
            <div class="paragraph-content">
            <% if e.content.present? %>
              <%= e.content %>
            <% else %>
              Click to add content.
            <% end %>
            </div>
              <div class="paragraph-form d-none">
                <%= form_with(model: [@post, e]) do |f|%>
                  <%= f.rich_text_area :content %>
                  <div class="mt-3">
                  <%= f.submit 'Save', class: 'btn btn-primary'%>
                  <a href="#" class="cancel btn btn-secondary">Cancel</a>
                <% end %>
                  </div>
              </div>
            </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>



